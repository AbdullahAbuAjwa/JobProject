<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="570.0" prefWidth="800.0" style="-fx-background-color: #95CB72;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.ViewJobsController">
    <children>
        <Label alignment="CENTER" layoutX="20.0" layoutY="10.0" prefHeight="53.0" prefWidth="113.0"
               style="-fx-border-color: #000;" text="All jobs">
            <font>
                <Font name="Gloucester MT Extra Condensed" size="33.0"/>
            </font>
        </Label>
        <ListView fx:id="listview" layoutX="42.0" layoutY="158.0" prefHeight="384.0" prefWidth="716.0"
                  style="-fx-border-color: #000; -fx-background-radius: 8; -fx-border-radius: 8;"/>
        <ComboBox fx:id="comb_categ" editable="true" layoutX="42.0" layoutY="94.0" onAction="#show_categories"
                  prefWidth="150.0" promptText="Categories"/>
        <Button fx:id="bt_profile" layoutX="703.0" layoutY="23.0" mnemonicParsing="false" onAction="#showProfile"
                prefHeight="26.0" prefWidth="60.0" text="Profile"/>
        <Button fx:id="bt_notif" layoutX="608.0" layoutY="24.0" mnemonicParsing="false" onAction="#showNotification"
                prefHeight="16.0" prefWidth="82.0" text="notification"/>
        <TextField fx:id="ft_search" layoutX="232.0" layoutY="94.0" onAction="#search"
                   promptText="Search for companies"/>
        <Label fx:id="name" layoutX="168.0" layoutY="23.0" prefHeight="26.0" prefWidth="102.0" text="Name"
               textFill="RED">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
