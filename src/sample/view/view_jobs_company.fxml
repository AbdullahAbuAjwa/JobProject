<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="606.0" prefWidth="849.0" style="-fx-background-color: #95CB72;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.ViewJobsCompanyController">
    <children>
        <ComboBox fx:id="comb_categ" editable="true" layoutX="47.0" layoutY="129.0" onAction="#showCateg"
                  prefWidth="150.0" promptText="Categories"/>
        <TextField fx:id="tf_search" layoutX="258.0" layoutY="129.0" onAction="#search"
                   promptText="Search for students"/>
        <Button fx:id="bt_profile" layoutX="728.0" layoutY="82.0" mnemonicParsing="false" onAction="#showProfile"
                prefHeight="31.0" prefWidth="74.0" text="Profile"/>
        <Label alignment="CENTER" layoutX="23.0" layoutY="13.0" prefHeight="53.0" prefWidth="113.0"
               style="-fx-border-color: #000;" text="My jobs">
            <font>
                <Font name="Gloucester MT Extra Condensed" size="33.0"/>
            </font>
        </Label>
        <Button layoutX="628.0" layoutY="82.0" mnemonicParsing="false" onAction="#addJob" prefHeight="31.0"
                prefWidth="86.0" text="Add job"/>
        <ListView fx:id="listview" layoutX="47.0" layoutY="182.0" prefHeight="402.0" prefWidth="756.0"/>
        <Label fx:id="name" layoutX="47.0" layoutY="89.0" prefHeight="27.0" prefWidth="114.0" text="Name"
               textFill="RED">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
